{
	"name": "nimble",
	"description": "HTML, markdown, and SVG viewer and code editor.",
	"version": "1.0.0",
	"author": "Brandon Fowler",
	"license": "GPLv3",
	"main": "./build/main.js",
	"scripts": {
		"start": "webpack --mode=development && electron .",
		"build": "webpack --mode=production && electron-builder",
		"lint": "eslint --ext .ts ."
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/BrandonXLF/nimble.git"
	},
	"devDependencies": {
		"@types/lodash.throttle": "^4.1.7",
		"@types/showdown": "^2.0.1",
		"@typescript-eslint/eslint-plugin": "^6.7.4",
		"@typescript-eslint/parser": "^6.7.4",
		"css-loader": "^6.8.1",
		"electron": "^27.0.0",
		"electron-builder": "^24.6.4",
		"eslint": "^8.43.0",
		"eslint-plugin-deprecation": "^2.0.0",
		"file-loader": "^6.2.0",
		"html-loader": "^4.2.0",
		"html-webpack-plugin": "^5.5.3",
		"less": "^4.1.3",
		"less-loader": "^11.1.3",
		"mini-css-extract-plugin": "^2.7.6",
		"node-loader": "^2.0.0",
		"style-loader": "^3.3.3",
		"ts-loader": "^9.4.3",
		"ts-node": "^10.9.1",
		"typescript": "^5.1.3",
		"webpack-cli": "^5.1.4"
	},
	"dependencies": {
		"brace": "^0.11.1",
		"electron-store": "^8.1.0",
		"lodash.throttle": "^4.1.1",
		"showdown": "^2.1.0"
	},
	"//": "BUG: https://github.com/electron-userland/electron-builder/issues/7826",
	"build": {
		"appId": "me.brandonfowler.nimble",
		"productName": "Nimble HTML and Markdown",
		"files": [
			"build/*",
			"package.json"
		],
		"win": {
			"executableName": "nimble"
		},
		"linux": {
			"executableName": "nimble"
		},
		"mac": {
			"executableName": "nimble"
		},
		"fileAssociations": [
			{
				"ext": "html",
				"name": "HTML File"
			},
			{
				"ext": "htm",
				"name": "HTML File"
			},
			{
				"ext": "md",
				"name": "Markdown File"
			},
			{
				"ext": "markdown",
				"name": "Markdown File"
			},
			{
				"ext": "svg",
				"name": "SVG File"
			}
		]
	}
}
