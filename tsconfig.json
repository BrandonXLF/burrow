{
	"compilerOptions": {
		"module": "CommonJS",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"strictNullChecks": true,
		"sourceMap": false,
		"esModuleInterop": true,
		"outDir": "dist",
		"baseUrl": ".",
		"allowSyntheticDefaultImports": true,
		"paths": {
			"*": ["node_modules/*"]
		},
		"target": "ESNext",
		"resolveJsonModule": true
	},
	"include": [
		"src/**/*"
	]
}